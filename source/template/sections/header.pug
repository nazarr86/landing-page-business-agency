header.header
        .header__top
            .container
                .contacts
                    a.contact(href="tel:+380639999999")
                        i.fa.fa-mobile.contact__icon(aria-hidden="true")
                        span.contact__text (063)999-99-99

                    a.contact(href="mailto:info@business.co")
                        i.fa.fa-envelope.contact__icon.contact__icon--email(aria-hidden="true")
                        span.contact__text info@business.co

                    a.facebook-icon(href="facebook.com")
                        i.fa.fa-facebook(aria-hidden="true")
        .container
            .header__bottom
                .logo: img.logo__picture(src="images/logo.png" alt="Logo")
                nav.nav
                    - var items = ['Home', 'About us', 'Our Approch', 'Our Work']
                    - var dataItems = ['header', 'about', 'approch', 'work']
                        each item, key in items
                            if item === 'Home'
                                a.nav__link.nav__link--active(href="#" data-link=dataItems[key])= item
                            else
                                a.nav__link(href="#" data-link=dataItems[key])= item
                a.button.header__button.button--red(href="#") Free Consultation
